{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
		"*": ["node_modules/*", "src/types/*"]
		},
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true
  	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
